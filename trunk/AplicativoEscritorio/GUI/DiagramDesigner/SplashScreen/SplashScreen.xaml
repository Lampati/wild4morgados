<Window 
    x:Class="SplashScreen.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:control="clr-namespace:LoadingControl.Control"
    xmlns:local="clr-namespace:SplashScreen"  
                    Icon="/Ragnarok;component/Images/GarGarDev.png"
    Title="Cargando GarGar Dev..."  WindowStartupLocation="CenterScreen" WindowStyle="None" 
         BorderThickness="2" ShowInTaskbar="True" ResizeMode="NoResize"  Margin="20" Width="655" SizeToContent="Height">
    

    <StackPanel  >
    <StackPanel Orientation="Horizontal"  >
        <Image Source="/Images/GarGarDevLargeSplash.png" Margin="0,0,0,0"   Width="500"/>
        <Image gif:ImageBehavior.AnimatedSource="/Images/bouncy.gif" Margin="0,0,0,25" VerticalAlignment="Bottom" Width="128"  />

        <!--<Label Height="28" Margin="19,0,17,15" Name="label2" VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static local:MessageListener.Instance},Path=Message}" Foreground="Black"></Label>-->
        </StackPanel>
        <TextBlock Name="txtVersion" HorizontalAlignment="Right" Margin="0,0,3,0"></TextBlock>
    </StackPanel>
    
</Window>
