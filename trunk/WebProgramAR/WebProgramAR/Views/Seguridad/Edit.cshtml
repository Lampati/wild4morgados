@model WebProgramAR.Sitio.Models.ReglaSeguridadViewModel
@{
    Layout = null;
    ViewBag.Title = "Editar";
}
<h2>Editar</h2>
<h4>Seguridad</h4>

@using (Ajax.BeginForm("Edit", "Seguridad", FormMethod.Post, new AjaxOptions { OnBegin = "disableButtons", UpdateTargetId = "update-message", OnSuccess = "updateSuccess", HttpMethod = "POST" }))
{ 
    @Html.ValidationSummary(true)

        @Html.Partial("_Edit", Model)
        
       <div id="buttonSectionOptions" class="buttonSectionOptions">
            <div>
                <input type="submit" value="Guardar" class="submit" id="btnGuardar"/>
                <input type="button" value="Guardar" class="submit submitDisabled" id="btnGuardarDisabled"/>
            </div>
            <div >
                 <input type="button" value="Cancelar" class="submit" id="btnCancelar"/>
            </div>
        </div>
}
<div class="update-message-box">
    <div id="update-message" class="error" ></div>
    <div class="pointerBox"></div>
</div>
<div id="divOperacionExitosa">Operacion Exitosa</div>
