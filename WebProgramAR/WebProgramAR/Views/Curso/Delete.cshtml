@model WebProgramAR.Entidades.Curso
@{

    Layout = null;
}
<script type="text/javascript">
    $("#btnCancelar").click(function (event) {
        CerrarDialog();
    });
</script>
<h2>Eliminar</h2>
<legend>Curso</legend>
    <h3>Confirmacion</h3>

<fieldset>
    
      @Html.HiddenFor(model => model.CursoId)
    <br style="height: 5px" />
    <div class="fila">
        <div class="display-label-delete">Nombre:</div>
        <div class="display-field-delete">@Model.Nombre</div>
    </div>
 
    
</fieldset>
    
@using (Ajax.BeginForm("Delete", "Curso", FormMethod.Post, new AjaxOptions { UpdateTargetId = "update-message", OnSuccess = "updateSuccess", HttpMethod = "POST" }))
{
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td align="center">
                <input type="submit" value="Eliminar"  />
            </td>
            <td style="width: 10px">
            </td>
            <td align="center">
                <input type="button" value="Cancelar" class="submit" id="btnCancelar" />
            </td>
        </tr>
    </table>

}
<div id="update-message" class"error" style="display:none;"></div>
<div id="divOperacionExitosa">Operacion Exitosa</div>
<script language="javascript">

    function updateWindow() {
        alert("dihjas");
        CerrarDialog();
        window.location.reload();
    }
    function updateSuccess() {
        if ($("#update-message").html() == "True") {
            $("#divOperacionExitosa").fadeIn(300).delay(800).fadeOut(500);
            setTimeout("updateWindow", 1000);
        } else {
            $("#update-message").show();
        }

    }
    
</script>