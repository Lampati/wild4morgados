@model WebProgramAR.Entidades.Curso
@{
    Layout = null;
}
<h2>Detalles</h2>
<h4>Curso</h4>
<div style="overflow:auto;width:100%">
    <fieldset class="details" style="height:auto;max-height:380px;width:85%;overflow:auto">

        <div class="fila">
            <div class="display-label-delete">Nombre:</div>
            <div class="display-field-delete">@Model.Nombre</div>
        </div>
        <div class="fila">
           @Html.Partial("../Ejercicio/_ListadoDisplay", Model.Ejercicios.ToList())
        </div>    
    </fieldset>
</div>

<table width="100%" cellpadding="0" cellspacing="0" id="submitButton">
    <tr>
        <td align="center">
            <input type="button" value="OK" class="submit" id="btnCancelar" />
        </td>
    </tr>
</table>
