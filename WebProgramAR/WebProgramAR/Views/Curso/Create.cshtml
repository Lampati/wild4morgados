@model WebProgramAR.Entidades.Curso


@{
    Layout = null;
    ViewBag.Title = "Cursos";
}

<h2>Nuevo</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/utils.js")" type="text/javascript"></script>

<script type="text/javascript">
    $("#btnCancelar").live('click',function () {
        CerrarDialog();
    });

</script>


   
@using (Html.BeginForm("Create", "Curso", FormMethod.Post, new { id="frmSaveCurso",enctype = "multipart/form-data" }))
{ 
    <fieldset>
        <legend>Curso</legend>
        @Html.ValidationSummary(true)

        <br style="height:5px" />
        @Html.Partial("_CreateOrEdit", Model)
         <br style="height:5px" />

        <div style="width:100%">
            <div style="display:inline;float:left;left:15%;">
                <input type="submit" value="Guardar"  id="btnAceptar"/> 
            </div>
            <div style="display:inline;float:left;margin-left:20px;">
                 <input type="button" value="Cancelar" class="submit" id="btnCancelar" />
            </div>
        </div>
    </fieldset>
}
