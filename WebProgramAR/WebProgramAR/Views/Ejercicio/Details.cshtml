@model WebProgramAR.Entidades.Ejercicio
@{
    Layout = null;
}
<script type="text/javascript">
    $("#btnCancelarEjercicio").click(function (event) {
        CerrarDialog();
    });
</script>
<h2>Detalles</h2>
<legend>Ejercicio</legend>

<fieldset class="details">
    
    <div class="fila">
        <div class="display-label-delete">Nombre:</div>
        <div class="display-field-delete">@Model.Nombre</div>
    </div>
    <div class="fila">
        <div class="display-label-delete">Nivel Ejercicio:</div>
        <div class="display-field-delete">@Model.NivelEjercicio</div>
    </div>
    <div class="fila">
        <div class="display-label-delete">Enunciado:</div>
        <div class="display-field-delete">@Model.Enunciado</div>
    </div>
    <div class="fila">
        <div class="display-label-delete">Solucion:</div>
        <div class="display-field-delete">@Model.Solucion</div>
    </div>
    <div class="fila">
        <div class="display-label-delete">Solucion Modo Texto:</div>
        <div class="display-field-delete">@Model.SolucionTexto</div>
    </div>
    <div class="fila">
        <div class="display-label-delete">Usuario</div>
        <div class="display-field-delete">@Model.Usuario.UsuarioNombre</div>
    </div>
    <div class="fila">
        <div class="display-label-delete">Estado</div>
        <div class="display-field-delete">@Model.EstadoEjercicio.Descripcion</div>
    </div>
    @if (Model.EstadoEjercicioId == Convert.ToInt32(WebProgramAR.Globales.Globals.EstadosEjercicios.Desaprobado) && Model.MensajeModeracion != null)
    {
        <div class="fila">
        <div class="display-label-delete">Razon desaprobado</div>
        <div class="display-field-delete">@Model.MensajeModeracion.Mensaje</div>
    </div>
    }
</fieldset>
<table width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td align="center">
            <input type="button" value="OK" class="submit" id="btnCancelarEjercicio" />
        </td>
    </tr>
</table>
