@model WebProgramAR.Entidades.Usuario
@{

    Layout = null;
}

<h2>Eliminar</h2>
<legend>Curso</legend>
    <h1>Confirmacion</h1>

    
<div class="SameSectionSpace">
    <div class="fieldsElements">
        <div class="fila">
            <div class="display-label-delete">Nombre Usuario:</div>
            <div class="display-field-delete">@Model.UsuarioNombre</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Nombre:</div>
            <div class="display-field-delete">@Model.Nombre</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Apellido:</div>
            <div class="display-field-delete">@Model.Apellido</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Email:</div>
            <div class="display-field-delete">@Model.Email</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Fecha Nacimiento:</div>
            <div class="display-field-delete">@Model.FechaNacimiento</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Tipo Usuario:</div>
            <div class="display-field-delete">@Model.TipoUsuario.Descripcion</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Pais:</div>
            <div class="display-field-delete">@Model.Pais.Descripcion</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Provincia:</div>
            <div class="display-field-delete">@Model.Provincia.Descripcion</div>
        </div>
        <div class="fila">
            <div class="display-label-delete">Localidad:</div>
            <div class="display-field-delete">@Model.Localidad.Descripcion</div>
        </div>
    </div>
</div>
    
@using (Html.BeginForm("Delete", "Usuario", FormMethod.Post, new { id = "target", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.UsuarioId)
    
    <div id="buttonSectionOptions" class="buttonSectionOptions">
            <div>
                <input type="submit" value="Guardar" class="submit" id="btnGuardar"/>
            </div>
            <div >
                 <input type="button" value="Cancelar" class="submit" id="btnCancelar"/>
            </div>
        </div>

}
