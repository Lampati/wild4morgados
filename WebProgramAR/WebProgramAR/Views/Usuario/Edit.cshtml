@model WebProgramAR.Entidades.Usuario
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@{
    Layout = null;  
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<legend>Usuario</legend>

@using (Html.BeginForm("Edit", "Usuario", FormMethod.Post, new { id = "target", enctype = "multipart/form-data" }))
{ 
    @Html.ValidationSummary(true)
    
         
        <br style="height:5px" />
        @Html.Partial("_CreateOrEdit", Model)
        
        <div style="position:absolute;width:100%;bottom:30px;">
            <div style="display:inline;float:left;left:15%;">
                <input type="submit" value="Guardar"  id="btnAceptar"/> 
            </div>
            <div style="display:inline;float:left;margin-left:20px;">
                 <input type="button" value="Cancelar" class="submit" id="btnCancelar" />
            </div>
        </div>

}
