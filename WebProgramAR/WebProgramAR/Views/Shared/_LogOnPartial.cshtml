<script language="javascript">

    $(document).ready(function () {
        $("#loginClickMe").click(function (event) {
            LoginPopUp(event);
        });
        $(".logOutCandado").click(function (event) {
            alert("Desloguarse");
        });
        $("#miPerfil").click(function (event) {
            OpenDialog(event,"", '@Url.Action("../Usuario/MiPerfil")/', 800, 400);
        });
    });
    
    function LoginPopUp(event) {
        OpenDialogLogin(event, '', '@Url.Action("../Account/LogOn")/', 500, 370);
    }
</script>

@if(Request.IsAuthenticated) {
    <div id="logoutClickMe">
        <img class="logOutCandado hoverRel" src="../../Content/images/logout.png" style="float:center" alt="LogOff" />
        <div id="miPerfil" class="hoverRel" alt="Mi Perfil">@User.Identity.Name</div>
    </div>
}
else
{
    <div id="loginClickMe">
        <img class="logOnCandado" src="../../Content/images/lock_icon_close.png" style="float:center" />
        <div id="logOn">Log On </div>
    </div>
}
<div id="dialogLogin" class="dialogDiv border_all" ></div>
<div id="dialog" class="dialogDiv border_all" ></div>