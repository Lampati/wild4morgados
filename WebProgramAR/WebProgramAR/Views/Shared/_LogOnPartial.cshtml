<script language="javascript">

    $(document).ready(function () {
        $("#loginClickMe").click(function (event) {
            LoginPopUp(event);
        });
        $(".logOutCandado").click(function (event) {

            $.ajax({
                url: '@Url.Action("LogOff","Account")',
                contentType: 'application/json',
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    window.location.reload();
                }
            })

        });
        /*PARA EL MANEJO DE MENU/SUBMENU*/
        $(".seeMoreOptions").click(function () {
            var divId = $(this).attr("id");
            var left = ($(this).position().left) - 70;
            var top = ($(this).position().top) + 5;
            $(".userOptions").css("left", left);
            $(".userOptions").css("top", top);
            $(".userOptions").stop(true, true).fadeIn("slow");
        });
        $(".userOptions li").mouseover(function () {
            $("#userOptions li").each(function () {
                $(this).removeClass("subMenuSelected");
            });
        });

        

    });
    
    function LoginPopUp(event) {
        OpenDialogLogin(event, '', '@Url.Action("../Account/LogOn")/', 500, 370);
    }
</script>

@if(Request.IsAuthenticated) {
    <div id="logoutClickMe">
        <div id="miPerfil" class="miPerfilButton hoverRel" alt="Mi Perfil">@User.Identity.Name</div>
        <div id="seeMoreOptionsUser" class="seeMoreOptions"></div>
    </div>
    <ul id="userOptions" class="userOptions">
        <li id="userOption">
            <div>
                <img class="logOutCandado hoverRel" src="../../Content/images/logout.png" style="float:center" alt="LogOff" />
            </div>
            <div>
                LogOut
            </div>
        </li>
        <li id="userOption">
            <div id="miPerfil" class="miPerfilButton hoverRel" alt="Mi Perfil">@Html.ActionLink("Mi Perfil", "MiPerfil", "Usuario")</div>
        </li>
    </ul>
}
else
{
    <div id="loginClickMe">
        <img class="logOnCandado" src="../../Content/images/lock_icon_close.png" style="float:center" />
        <div id="logOn">Log On </div>
    </div>
}
<div id="dialogLogin" class="dialogDiv border_all" ></div>
